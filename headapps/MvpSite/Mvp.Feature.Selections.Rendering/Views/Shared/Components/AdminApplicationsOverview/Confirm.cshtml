@model Mvp.Feature.Selections.Models.Admin.ApplicationsOverviewModel

<div class="mvp-fs-adminapplicationsoverview col-12 bg-white">
	<h2 asp-for="TitleLabel"></h2>
    <p>
        @if (Model.IsEditing)
        {
            @Html.Raw(Model.ConfirmMessageLabelFormat?.EditableMarkup)
        }
        else if(Model.ConfirmMessageLabelFormat != null)
        {
            @string.Format(Model.ConfirmMessageLabelFormat.Value, Model.RemoveApplication.Applicant.Name, Model.RemoveApplication.Status, Model.RemoveApplication.Contributions.Count)
        }
    </p>
    <form method="post">
        <input asp-for="RemoveApplicationId" type="hidden"/>
        <input asp-for="RemoveConfirmed" type="hidden" value="true"/>
        <button asp-for="ConfirmLabel" type="submit" class="btn btn-danger"></button>
    </form>
</div>