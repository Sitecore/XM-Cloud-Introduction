@model MvpSite.Rendering.Models.Admin.SystemRolesOverviewModel

<div class="mvp-fs-adminsystemrolesoverview col-12 bg-white">
	<h2 asp-for="TitleLabel"></h2>
    <p>
        @if (Model.IsEditing)
        {
            @Html.Raw(Model.ConfirmMessageLabelFormat?.EditableMarkup)
        }
        else if(Model.ConfirmMessageLabelFormat != null)
        {
            @string.Format(Model.ConfirmMessageLabelFormat.Value, Model.RemoveSystemRole?.Name)
        }
    </p>
    <form method="post">
        <input asp-for="RemoveSystemRoleId" type="hidden"/>
        <input asp-for="RemoveConfirmed" type="hidden" value="true"/>
        <button asp-for="ConfirmLabel" type="submit" class="btn btn-danger"></button>
    </form>
</div>