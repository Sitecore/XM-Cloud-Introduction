@model MvpSite.Rendering.Models.ImageTeaser

<section class="cta-overlapped-image " id="overlap54630191">
    <div class="container">
        <div class="row justify-content-end inner">
         <div class="col-lg-6" style="opacity: 1; top: 0px;">
                <sc-img asp-for="@Model.TeaserImage" loading="lazy" />
            </div>
            <div class="col-12 col-lg-6">
                <div class="text ">
                    <h3><sc-text asp-for="@Model.TeaserTitle" /></h3>
                    <sc-text asp-for="@Model.TeaserText" />

                    <sc-link asp-for="@Model.TeaserLink" data-module="cta-button" class="link-arrow" aria-label="@Model.TeaserLink?.Value.Title">
                        <img alt="Learn more" src="images/icon-arrow.png">
                    </sc-link>

                </div>
            </div>
           
        </div>
    </div>
</section>