@model Mvp.Feature.Social.Models.Rss
@inject Mvp.Feature.Social.FeedReader.IFeedReader FeedReader

    <div class="col-12 panel">
        
        <h1 asp-for="Title"></h1>
        
        <p asp-for="Description"></p>


        <h2>Latest episodes</h2>

        @{
            var feedItems = FeedReader.GetFeed(Model.RssUrl.Value);
            @foreach (var item in feedItems)
            {
                <h3><a href="@item.Url">@item.Title</a></h3>
                <p>@item.Description</p>
            }
        }

    </div>