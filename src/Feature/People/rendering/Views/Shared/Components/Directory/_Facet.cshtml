@using Mvp.Feature.People.Models.Directory
@using Mvp.Feature.People.ViewComponents
@using Sitecore.AspNet.RenderingEngine.TagHelpers.Fields
@model Mvp.Feature.People.Models.Directory.FacetViewModel

@if (Model.FacetOptions.Count > 0)
{
    <div>
        <h3 asp-for="Name"></h3>
        <ul class="list-group">
            @foreach (FacetOption option in Model.FacetOptions)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="@option.Identifier" name="@(DirectoryViewComponent.FacetQuerystringPrefix + Model.Identifier)" value="@option.Identifier" checked="@(option.IsActive ? "checked" : null)" />
                        <label for="@option.Identifier" class="form-check-label">@option.Display</label>
                    </div>
                    <span class="badge badge-primary badge-pill">@option.Count</span>
                </li>
            }
        </ul>
    </div>
}